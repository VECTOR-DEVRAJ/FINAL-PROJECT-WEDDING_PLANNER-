    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
            color: goldenrod;
            background-color: #CEA2FD;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 2rem;
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .container h2{
            margin-top: 3rem;
            font-size: 2.5rem;
            font-weight: bold;
            font-family: Lucida Handwriting;
            text-shadow: 2px 3px 4px white;
        }

        .container p{
            color: white;
            line-height: 1.5rem;
            text-align: justify;
        }

        .container img {
            height: 23rem;
            width: 30rem;
            object-fit: cover;
        }

        .heading img{
            width: 100vw;
            height: 100vh;
            max-width: 100%;
        }

        .container-one,
        .container-two,
        .container-three,
        .container-four,
        .container-five,
        .container-six,
        .container-seven {
            display: flex;
            gap: 4rem;
            justify-content: center;
            align-items: center;
        }

        .text {
            display: flex;
            flex-direction: column;
            /* justify-content: flex-start; */
            /* align-items: center; */
            /* height: 20rem; */
            width: 100%;
            line-height: 1.5rem;
            max-width: 600px;
            padding: 20px;
            color: white;
        }
        .text .strong{
            margin-bottom: 0.5rem;
            color: gold;
        }

        .text strong {
            font-size: large;
        }

        .container div {
            flex: 1;
        }

        .container img.slide-left {
        animation: slideLeft 1s ease forwards;
        }

        .container img.slide-right {
            animation: slideRight 1s ease forwards;
        }

        .container-top .heading{
            position: relative;
        }
        .container-top .heading img{
            opacity: 0.8;
        }

        .container-top .heading  a h2{
            position: absolute;
            top: 40vh;
            right: 40vw;
            padding: 0.8rem;
            opacity: 0.7;
            border-radius: 1rem;
            color: gold;
            background-color: red;
            transition: transform 0.3s
        }
        .container-top .heading  a h2:hover{
            transform: scale(1.05);
            color: red;
            background-color: gold;
        }

        @keyframes slideLeft {
            from {
                transform: translateX(-100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @keyframes slideRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .btn{
            background-color: #CEA2FD;
            border: 2px solid gold;
            border-radius: 3rem;
            color: white;
        }
        .btn:hover{
            color: #9454d7;
            font-weight: 550;
        }

    </style>
</head>

